# run all the commands in root user
sudo su

# update operating system
apt-get update

# Docker dependencies
apt-get install docker.io -y
systemctl start docker
systemctl enable docker

# ‘curl’ command is used to send request URL
apt-get install curl -y

# download an add-key for Kubernetes from URL
curl -s https://packages.cloud.google.com/apt/doc/apt-key.gpg | sudo apt-key add

# add important dependencies for kubernetes
chmod 777 /etc/apt/sources.list.d/
cat <<EOF | sudo tee /etc/apt/sources.list.d/kubernetes.list
deb https://apt.kubernetes.io/ kubernetes-xenial main
EOF

# update dependencies
sudo apt-get update

# Installing kubeadm, kubelet and kubectl 
sudo apt-get install -y kubelet kubeadm kubectl kubernetes-cni

swapoff -a

kubeadm init 

kubeadm init --apiserver-advertise-address=<your machine/instance ip-address> --pod-network-cidr=192.168.0.0/16
