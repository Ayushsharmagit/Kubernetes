# update operating system
sudo apt-get update

# Docker dependencies
sudo apt-get install -y docker.io
sudo systemctl start docker
sudo systemctl enable docker

# ‘curl’ command is used to send request URL
sudo apt-get install -y curl

# download an add-key for Kubernetes from URL
sudo curl -s https://packages.cloud.google.com/apt/doc/apt-key.gpg | sudo apt-key add

# add important dependencies for kubernetes
sudo chmod 777 /etc/apt/sources.list.d/
sudo cat <<EOF | sudo tee /etc/apt/sources.list.d/kubernetes.list
deb https://apt.kubernetes.io/ kubernetes-xenial main
EOF

# update dependencies
sudo apt-get update

# Installing kubeadm, kubelet and kubectl 
sudo apt-get install -y kubelet kubeadm kubectl kubernetes-cni

sudo swapoff -a

# initiallizing control plane
sudo kubeadm init
        or
# if the number of available CPUs is less than the required 2        
sudo kubeadm init --ignore-preflight-errors=NumCPU


